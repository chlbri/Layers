{
  "compilerOptions": {
    "lib": ["es5", "es6", "ES2018"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": true
  }
}
